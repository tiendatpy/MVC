@model Project_63131920.Models.HomeModel_63131920

@{
    ViewBag.Title = "MANDO BRAND - Thời trang nam cao cấp";
}

<main>
    <div class="container">
        <!-- ========================= SECTION MAIN  ========================= -->
        <section class="section-main padding-y">
            <main class="card">
                <div class="card-body">

                    <div class="row">
                        <aside class="col-lg col-md-3 flex-lg-grow-0">
                            <h6>DANH MỤC</h6>
                            <nav class="nav-home-aside">
                                <ul class="menu-category">
                                    @foreach (var item in Model.ListCate)
                                    {
                                        <li>
                                            @Html.ActionLink(item.name, "ProductCategory", "Category_63131920", new { @Id = item.id}, null)
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </aside> <!-- col.// -->
                        <div class="col-md-9 col-xl-7 col-lg-7">

                            <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                            <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="~/Assets/images/banners/slider1.webp" alt="First slide" />
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/Assets/images/banners/slider2.webp" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/Assets/images/banners/slider3.webp" alt="Third slide">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                        </div> <!-- col.// -->
                        <div class="col-md d-none d-lg-block flex-grow-1">
                            <aside class="special-home-right">
                                <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">Polo</h6>
                                        <a href="#" class="btn btn-secondary btn-sm"> Xem ngay </a>
                                    </div>
                                    <img src="~/Assets/images/items/polo1.webp" height="80" class="img-bg">
                                </div>
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">Shirt</h6>
                                        <a href="#" class="btn btn-secondary btn-sm"> Xem ngay </a>
                                    </div>
                                    <img src="~/Assets/images/items/shirt2.jpg" height="80" class="img-bg">
                                </div>
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">Blazer tay lỡ</h6>
                                        <a href="#" class="btn btn-secondary btn-sm"> Xem ngay </a>
                                    </div>
                                    <img src="~/Assets/images/items/blazer1.webp" height="80" class="img-bg">
                                </div>
                            </aside>
                        </div> <!-- col.// -->
                    </div> <!-- row.// -->

                </div> <!-- card-body.// -->
            </main> <!-- card.// -->

        </section>
        <!-- ========================= SECTION MAIN END// ========================= -->
        <!-- =============== SECTION DEAL =============== -->
        <section class="padding-bottom">
            <div class="card card-deal">
                <div class="col-heading content-body">
                    <header class="section-heading">
                        <h3 class="section-title">Giảm giá sốc</h3>
                    </header><!-- sect-heading -->
                    <div class="timer">
                        <div> <span class="num">04</span> <small>Ngày</small></div>
                        <div> <span class="num">12</span> <small>Giờ</small></div>
                        <div> <span class="num">58</span> <small>Phút</small></div>
                        <div> <span class="num">02</span> <small>Giây</small></div>
                    </div>
                </div> <!-- col.// -->
                <div class="row no-gutters items-wrap">
                    @foreach (var item in Model.ListProduct.Take(4))
                    {
                        <div class="col-md col-6">
                            <figure class="card-product-grid card-sm">
                                <a href="@Url.Action("Detail", "Product_63131920", new {Id = item.id})" class="img-wrap">
                                    <img src="~/Assets/images/items/@item.product_image">
                                </a>
                                <div class="text-wrap p-3">
                                    <a href="@Url.Action("Detail", "Product_63131920", new {Id = item.id})" class="title">@Html.Raw(item.description)</a>
                                    <span class="badge badge-danger"> -20% </span>
                                </div>
                            </figure>
                        </div> <!-- col.// -->
                    }
                </div>
            </div>

        </section>
        <!-- =============== SECTION DEAL // END =============== -->
        <!-- =============== SECTION 1 =============== -->
        <section class="padding-bottom">
            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Áo khoác</h4>
            </header>

            <div class="card card-home-category">
                <div class="row no-gutters">
                    <div class="col-md-3">

                        <div class="home-category-banner bg-light-orange">
                            <h5 class="title">Top trending cho mùa hè của bạn</h5>
                            <p>Mùa hè năm nay, áo khoác nam thời trang và phong cách, mang lại cho bạn sự thoải mái và phong cách</p>
                            <a href="#" class="btn btn-outline-primary rounded-pill">Mua ngay</a>
                            <img src="~/Assets/images/items/2.jpg" class="img-bg">
                        </div>

                    </div> <!-- col.// -->
                    <div class="col-md-9">
                        <ul class="row no-gutters bordered-cols">
                            @foreach (var item in Model.ListProduct.Where(n => n.category_id == 5).Take(8))
                            {
                                <li class="col-6 col-lg-3 col-md-4">
                                    <a href="@Url.Action("Detail", "Product_63131920", new {Id = item.id})" class="item">
                                        <div class="card-body">
                                            <h6 class="title">@Html.Raw(item.description)</h6>
                                            <img class="img-sm float-right" src="~/Assets/images/items/@item.product_image">
                                            <p class="text-muted"><i class="fa fa-map-marker-alt"></i> Nha Trang, Việt Nam</p>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card.// -->
        </section>
        <!-- =============== SECTION 1 END =============== -->
        <!-- =============== SECTION 2 =============== -->
        <section class="padding-bottom">
            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Blazers</h4>
            </header>

            <div class="card card-home-category">
                <div class="row no-gutters">
                    <div class="col-md-3">

                        <div class="home-category-banner bg-light-orange">
                            <h5 class="title">Blazer nam đẳng cấp và phong cách</h5>
                            <p>Biểu tượng của phong cách đẳng cấp và lịch lãm, làm tăng vẻ nổi bật và quý phái của bạn. </p>
                            <a href="#" class="btn btn-outline-primary rounded-pill">Mua ngay</a>
                            <img src="~/Assets/images/items/background.jpeg" class="img-bg">
                        </div>

                    </div> <!-- col.// -->
                    <div class="col-md-9">
                        <ul class="row no-gutters bordered-cols">
                            @foreach(var item in Model.ListProduct.Where(n => n.category_id == 3).Take(8))
                            {
                                <li class="col-6 col-lg-3 col-md-4">
                                    <a href="@Url.Action("Detail", "Product_63131920", new {Id = item.id})" class="item">
                                        <div class="card-body">
                                            <h6 class="title">@Html.Raw(item.description)</h6>
                                            <img class="img-sm float-right" src="~/Assets/images/items/@item.product_image">
                                            <p class="text-muted"><i class="fa fa-map-marker-alt"></i> Nha Trang, Việt Nam</p>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card.// -->
        </section>
        <!-- =============== SECTION 2 END =============== -->
        <!-- =============== SECTION REQUEST =============== -->

        <section class="padding-bottom">

            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Giao hàng hỏa tốc</h4>
            </header>

            <div class="row">
                <div class="col-md-12">
                    <div class="card-banner banner-quote overlay-gradient" style="background-image: url('~/Assets/images/banners/banner9.jpg');">
                        <div class="card-img-overlay white">
                            <h3 class="card-title">Dịch Vụ 24/7</h3>
                            <p class="card-text" style="max-width: 400px">
                                Chúng tôi hiểu rằng thời gian có thể là quyết định tất cả. Vì vậy, dịch vụ giao hàng của chúng tôi hoạt động 24/7
                            </p>
                            <a href="#" class="btn btn-primary rounded-pill">Xem thêm</a>
                        </div>
                    </div>
            </div> <!-- row // -->
        </section>

        <!-- =============== SECTION REQUEST .//END =============== -->
        <!-- =============== SECTION ITEMS =============== -->
        <section class="padding-bottom-sm">

            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Dành cho bạn</h4>
            </header>

            <div class="row row-sm">
                @foreach (var item in Model.ListProduct.Take(12))
                {
                    <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                        <div href="#" class="card card-sm card-product-grid">
                            <a href="@Url.Action("Detail", "Product_63131920", new {Id = item.id})" class="img-wrap"> <img src="~/Assets/images/items/@item.product_image"> </a>
                            <figcaption class="info-wrap">
                                <a href="@Url.Action("Detail", "Product_63131920", new {Id = item.id})" class="title">@item.product_name</a>
                                <div class="price mt-1">@item.price.ToString("#,##0đ")</div> <!-- price-wrap.// -->
                            </figcaption>
                        </div>
                    </div> <!-- col.// -->
                }
            </div> <!-- row.// -->
        </section>
        <!-- =============== SECTION ITEMS .//END =============== -->
        <!-- =============== SECTION SERVICES =============== -->
        <section class="padding-bottom">

            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Dịch vụ thương mại</h4>
            </header>

            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <article class="card card-post">
                        <img src="~/Assets/images/posts/1.jpg" class="card-img-top">
                        <div class="card-body">
                            <h6 class="title">Bảo đảm thương mại</h6>
                            <p class="small text-uppercase text-muted">Bảo vệ đơn hàng</p>
                        </div>
                    </article> <!-- card.// -->
                </div> <!-- col.// -->
                <div class="col-md-3 col-sm-6">
                    <article class="card card-post">
                        <img src="~/Assets/images/posts/2.jpg" class="card-img-top">
                        <div class="card-body">
                            <h6 class="title">Thanh toán mọi lúc</h6>
                            <p class="small text-uppercase text-muted">Giải pháp tài chính</p>
                        </div>
                    </article> <!-- card.// -->
                </div> <!-- col.// -->
                <div class="col-md-3 col-sm-6">
                    <article class="card card-post">
                        <img src="~/Assets/images/posts/3.jpg" class="card-img-top">
                        <div class="card-body">
                            <h6 class="title">Giải pháp kiểm tra</h6>
                            <p class="small text-uppercase text-muted">Kiểm tra dễ dàng</p>
                        </div>
                    </article> <!-- card.// -->
                </div> <!-- col.// -->
                <div class="col-md-3 col-sm-6">
                    <article class="card card-post">
                        <img src="~/Assets/images/posts/4.jpg" class="card-img-top">
                        <div class="card-body">
                            <h6 class="title">Vận chuyển hỏa tốc</h6>
                            <p class="small text-uppercase text-muted">Dịch vụ logistic</p>
                        </div>
                    </article> <!-- card.// -->
                </div> <!-- col.// -->
            </div> <!-- row.// -->

        </section>
        <!-- =============== SECTION SERVICES .//END =============== -->

        <article class="my-4">
            <img src="~/Assets/images/banners/banner.webp" class="w-100" />
        </article>
    </div>
    <!-- container end.// -->
    <!-- ========================= SECTION SUBSCRIBE  ========================= -->
    <section class="section-subscribe padding-y-lg">
        <div class="container">

            <p class="pb-2 text-center text-white">Đăng ký nhận tin</p>

            <div class="row justify-content-md-center">
                <div class="col-lg-5 col-md-6">
                    <form class="form-row">
                        <div class="col-md-8 col-7">
                            <input class="form-control border-0" placeholder="Your Email" type="email">
                        </div> <!-- col.// -->
                        <div class="col-md-4 col-5">
                            <button type="submit" class="btn btn-block btn-warning"> <i class="fa fa-envelope"></i> Đăng ký </button>
                        </div> <!-- col.// -->
                    </form>
                    <small class="form-text text-white-50">Chúng tôi sẽ không bao giờ chia sẻ email này </small>
                </div> <!-- col-md-6.// -->
            </div>


        </div>
    </section>
    <!-- ========================= SECTION SUBSCRIBE END// ========================= -->

</main>